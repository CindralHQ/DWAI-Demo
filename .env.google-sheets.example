GOOGLE_SHEETS_API_KEY=your-google-api-key
GOOGLE_SHEETS_TESTIMONIAL_SPREADSHEET_ID=your-spreadsheet-id
# Optional overrides; defaults shown here match the codebase expectations.
# Leave GOOGLE_SHEETS_TESTIMONIAL_RANGE blank to auto-detect the first visible sheet.
GOOGLE_SHEETS_TESTIMONIAL_RANGE=
GOOGLE_SHEETS_NAME_HEADER=Name
GOOGLE_SHEETS_TESTIMONIAL_HEADER=Testimonial
GOOGLE_SHEETS_PERMISSION_HEADER=Permission
GOOGLE_SHEETS_PHOTO_HEADER=Photo
GOOGLE_SHEETS_DESIGNATION_HEADER=Designation
GOOGLE_SHEETS_COUNTRY_HEADER=Country
# Optional: thumbnail size used when Drive API access is not available (formats like w1000, h600, etc).
GOOGLE_SHEETS_DRIVE_THUMBNAIL_SIZE=w1000

# Service-account credentials (use these if your sheet is private).
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# Paste the entire private key on one line and replace actual newlines with \n
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\\nYOUR-KEY-MATERIAL\\n-----END PRIVATE KEY-----\\n

# To load Google Drive photos, enable the Google Drive API for this project and share each file with the service account above.
